<% content_for :title do%>
  <%= t('administrators.index.title') %>
<% end %>

<section id="administrators">
  <header>
    <h3><%= t('administrators.index.title') %></h3>
    <%= render  partial: 'contacts/add_button',
                locals: {
                sender: Site.current,
                 type: [ :user ]
               }
    %>
  </header>

  <div class="administrators-list well">

    <%= render partial:    'contacts/contact',
               collection: Site.current.sent_contacts.reload.first(12) %>
  </div>
</section>
