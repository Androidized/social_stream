<div class="dropdown">
  <%= image_tag current_subject.logo.url(:small), :class=>"user" %>
  <span class="name hidden-sm"><%= truncate_name(current_subject.name, length: 15) %></span>
  <%= link_to '#', class: 'dropdown-toggle', "data-toggle" => "dropdown" do %>
    <i class='fa fa-caret-down'></i> 
  <% end %>

  <ul class="dropdown-menu dropdown-menu-right">
    <li class="home-menu">
      <%= link_to root_path do %>
          <i class='fa fa-home <%= current_header_icon_class(:home) %>' title="<%= t 'header.icon.home' %>">
            <%= t 'header.icon.home' %>
          </i>
      <% end %>
    </li>
 
    <li class="profile-menu">
      <%= link_to current_subject do %>
          <i class='fa fa-user <%= current_header_icon_class(:user) %>' title="<%= t('profile.one') %>">
            <%= t('profile.one') %>
          </i>
      <% end %>
    </li>  

    <%= render :partial => 'layouts/header/header_dropdown_menu_sessions'%>
    
    <li class="privacy-menu">
      <%= link_to relation_customs_path do %>
          <i class='fa fa-key' title="<%= t 'dropdown.privacy' %>">
            <%= t 'dropdown.privacy' %>
          </i>
      <% end %>
    </li>

    <li class="settings-menu">
      <%= link_to settings_path, id: 'btn_menu_settings' do %>
          <i class='fa fa-gears' title="<%= t 'dropdown.settings' %>">
            <%= t 'dropdown.settings' %>
          </i>
      <% end %>
    </li>
    
    <li class="sign-out">
      <%= link_to destroy_user_session_path, :method => :delete do %>
          <i class='fa  fa-sign-out' title="<%= t 'sign_out' %>">
            <%= t 'sign_out' %>
          </i>
      <% end %>

    </li>
  </ul>
</div>
